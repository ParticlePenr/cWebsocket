<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">8dp</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorError</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextThemeOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">?attr/colorSecondaryVariant</item>
    </style>

    <style name="mButton" parent="TextAppearance.AppCompat.Button">
        <item name="fontFamily">@font/impact_font_family</item>
    </style>

    <style name="mTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:colorControlActivated">?attr/colorSecondary</item>
        <item name="boxBackgroundColor">?attr/colorPrimaryDark</item>
        <item name="hintTextColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="mEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">?attr/colorPrimarySurface</item>
        <item name="android:fontFamily">@font/muli_font_family</item>
    </style>

    <style name="AppCompat.TelaCheia" parent="Theme.ValorantPassBattle.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CheckBoxTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="colorControlActivated">?attr/colorSecondary</item>
    </style>

    <style name="alertDialog" parent="Theme.ValorantPassBattle.Dialog.Alert">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textAppearanceSmall">@style/MyTextAppearance</item>
        <item name="android:textAppearanceMedium">@style/MyTextAppearance</item>
        <item name="android:textAppearanceLarge">@style/MyTextAppearance</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle_Custom</item>
    </style>

    <style name="MyTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/muli_font_family</item>
        <item name="android:textSize">22sp</item>
    </style>


    <style name="DialogWindowTitle_Custom" parent="Theme.ValorantPassBattle.NoActionBar">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/TextAppearanceTabLayout</item>
    </style>

    <style name="TextAppearanceTabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/valorant_font_family</item>
    </style>

    <style name="Widget.Theme.ValorantPassBattle.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>