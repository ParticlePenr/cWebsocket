<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ValorantPassBattle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">#0F1923</item>
        <item name="colorPrimarySurface">#505A69</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#ECE8E1</item>
        <item name="colorOnPrimary">@color/text_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_400</item>
        <item name="colorSecondaryVariant">@color/red_500</item>
        <item name="colorOnSecondary">@color/mGray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <!-- Accent brand Color. -->
        <item name="colorAccent">@color/sucess</item>
        <!-- Error brand Color.-->
        <item name="colorControlNormal">@color/red_500</item>
        <item name="colorControlActivated">@color/red_400</item>
        <item name="colorError">@color/alert</item>
        <!-- Customize your theme here. -->
        <item name="colorOnSurface">@color/text_dark</item>
        <item name="alertDialogTheme">@style/alertDialog</item>

        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="mCardViewStyle">@style/CardViewStyle</item>
    </style>


    <style name="Theme.ValorantPassBattle.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ValorantPassBattle.Light.NoActionBar.FullScreen" parent="Theme.ValorantPassBattle.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.ValorantPassBattle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ValorantPassBattle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.ValorantPassBattle.Dialog.Alert" parent="ThemeOverlay.AppCompat.Dialog.Alert" />

    <style name="CustomPopupTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ThemeOverlay.ValorantPassBattle.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>