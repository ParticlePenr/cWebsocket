<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="14dp"
    android:gravity="clip_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_font_family"
                    android:hint="@string/tier_atual"
                    android:paddingTop="8dp"
                    android:paddingRight="5dp"
                    android:textColorHint="?attr/colorSecondary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_exp_initial_tier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/impact_font_family"
                    android:paddingTop="8dp"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_font_family"
                    android:hint="@string/exp_para_completar_"
                    android:paddingTop="8dp"
                    android:paddingRight="5dp"
                    android:textColorHint="?attr/colorSecondary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_exp_missing_tier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/impact_font_family"
                    android:paddingTop="8dp"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_baseline_edit_24"
            android:tint="?attr/colorSecondary" />

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_baseline_delete_24"
            android:tint="?attr/colorSecondary" />


    </LinearLayout>


</androidx.cardview.widget.CardView>