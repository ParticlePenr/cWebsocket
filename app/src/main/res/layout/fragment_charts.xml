<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.view.fragment.ChartsFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="14dp">

            <br.com.battlepassCalculatorValorant.ui.view.views.CardModule
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:adSize="BANNER"
                    app:adUnitId="@string/admob_card_id_test" />
            </br.com.battlepassCalculatorValorant.ui.view.views.CardModule>

            <br.com.battlepassCalculatorValorant.ui.view.views.CardModule
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_gravity="center"
                app:title="@string/xp_por_tier">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fragmentChartExpPerTier"
                    android:name="br.com.battlepassCalculatorValorant.ui.view.fragment.Principal.ChartExpPerTierFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </br.com.battlepassCalculatorValorant.ui.view.views.CardModule>

            <br.com.battlepassCalculatorValorant.ui.view.views.CardModule
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:adSize="LARGE_BANNER"
                    app:adUnitId="@string/admob_card_id_test" />
            </br.com.battlepassCalculatorValorant.ui.view.views.CardModule>

            <br.com.battlepassCalculatorValorant.ui.view.views.CardModule
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_gravity="center"
                app:title="@string/exp_per_day">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fragmentChartExpPerDay"
                    android:name="br.com.battlepassCalculatorValorant.ui.view.fragment.Principal.ChartExpPerDayFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </br.com.battlepassCalculatorValorant.ui.view.views.CardModule>

            <br.com.battlepassCalculatorValorant.ui.view.views.CardModule
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:title="@string/exp_de_missoes">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fragmentExpMissoes"
                    android:name="br.com.battlepassCalculatorValorant.ui.view.fragment.Propriedades.ExpStatisticFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </br.com.battlepassCalculatorValorant.ui.view.views.CardModule>

            <br.com.battlepassCalculatorValorant.ui.view.views.CardModule
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:adSize="MEDIUM_RECTANGLE"
                    app:adUnitId="@string/admob_card_id_test" />
            </br.com.battlepassCalculatorValorant.ui.view.views.CardModule>

            <View
                android:layout_width="match_parent"
                android:layout_height="55dp" />
        </LinearLayout>

    </ScrollView>
</layout>