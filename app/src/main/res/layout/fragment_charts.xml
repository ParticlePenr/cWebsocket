<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="br.com.battlepassCalculatorValorant.ui.fragment.ChartsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="14dp">

        <br.com.battlepassCalculatorValorant.ui.Advertisement.AdvertisementView
            android:id="@+id/adContainer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardChartExpPerTier"
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="550dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/valorant"
                    android:hint="@string/xp_por_tier"
                    android:paddingLeft="24dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="14dp"
                    android:textColorHint="?attr/colorSecondary"
                    android:textSize="20dp" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fragmentChartExpPerTier"
                    android:name="br.com.battlepassCalculatorValorant.ui.fragment.Principal.ChartExpPerTierFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <br.com.battlepassCalculatorValorant.ui.Advertisement.AdvertisementView
            android:id="@+id/adContainer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardFragmentExpMissoes"
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fragmentExpMissoes"
                    android:name="br.com.battlepassCalculatorValorant.ui.fragment.Propriedades.ExpStatisticFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="55dp" />
    </LinearLayout>


</ScrollView>